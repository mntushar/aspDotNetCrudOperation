@model crudOperation.Models.Student

@{
    ViewBag.Title = "Create Student";
}

<style>
    button.btn.btn-primary {
        margin-top: 10px;
    }
</style>

<h2>Create Student</h2>

<div class="row">
    <div class="col-md-10 col-md-offset-4">
        @using (Html.BeginForm())
        {
            @Html.LabelFor(nameformlable => nameformlable.Name)
            @Html.TextBoxFor(nameField => nameField.Name, new { @class = "form-control" })
            @Html.LabelFor(model => model.RegNo)
            @Html.TextBoxFor(model => model.RegNo, new { @class = "form-control" })
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
            <button type="submit" id="createStudentButton" class="btn btn-primary">Submit</button>

        }
    </div>
</div>

