@model IEnumerable<crudOperation.Models.Student>

@{
    ViewBag.Title = "Student List";
}

<h2>Student List</h2>

<p>@Html.ActionLink("Create student", "Create", "Students")</p>

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(student => student.Name)</th>
            <th>@Html.DisplayNameFor(student => student.RegNo)</th>
            <th>@Html.DisplayNameFor(student => student.Email)</th>
            <th>Action</th>
        </tr>
        @foreach (var student in Model)
        {
    <tr>
        <td>@student.Name</td>
        <td>@student.RegNo</td>
        <td>@student.Email</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = student.Id }) |
            @Html.ActionLink("Details", "Details", new { id = student.Id })
        </td>
    </tr>
        }
    </table>
}

