@model crudOperation.Models.DepartmentModels

@{
    ViewBag.Title = ViewBag.title;
}

<h2>@ViewBag.title</h2>

<div>
    <hr />
    <div class="row">
        <div class="col-md-6 col-md-offset-2">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Code)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Code)
                </dd>

            </dl>
        </div>
    </div>
</div>

<h3 class="text-center">Student List</h3>

<table class="table">
    <tr>
        <th>
            @*@Html.DisplayFor(model => model.Students[0].Name)*@
            Name
        </th>
        <th>
            @*@Html.DisplayFor(model => model.Students[0].Email)*@
            Email
        </th>
        <th>
            @*@Html.DisplayFor(model => model.Students[0].RegNo)*@
            RegNo
        </th>
        <th>
            @*@Html.DisplayFor("Department")*@
            Department
        </th>
    </tr>
    @{ foreach (var student in Model.Students)
        {
        <tr>
            <td>
                @student.Name
            </td>
            <td>
                @student.Email
            </td>
            <td>
                @student.RegNo
            </td>
            <td>
                @student.Department.Code
            </td>
        </tr>
        }

    }
</table>


@{
    if (ViewContext.RouteData.GetRequiredString("action") == "Delete")
    {
        <div class="row">
            <div class="col-md-10 col-md-offset-4">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <br />
                    <p class="text-danger">*Do you want to delete it!?</p>
                    <button type="submit" id="createStudentButton" class="btn btn-danger">Delete</button>
                }
            </div>
        </div>

    }

}

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "DepartmentList")
</p>
