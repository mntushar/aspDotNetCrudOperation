@model crudOperation.Models.StudentModels

@{
    ViewBag.Title = ViewBag.title;
}

<h2>@ViewBag.title</h2>

<div class="row">
    <div class="col-md-10 col-md-offset-4">
        <table>
            <tr>
                <td><strong>Name:</strong></td>
                <td>@Html.DisplayFor(model => model.Name)</td>
            </tr>
            <tr>
                <td><strong>Reg No:</strong></td>
                <td>@Html.DisplayFor(model => model.RegNo)</td>
            </tr>
            <tr>
                <td><strong>Email:</strong></td>
                <td>@Html.DisplayFor(model => model.Email)</td>
            </tr>
        </table>
    </div>
</div>

@{
    if (ViewContext.RouteData.GetRequiredString("action") == "Delete")
    {
        <div class="row">
            <div class="col-md-10 col-md-offset-4">
                @using (Html.BeginForm())
                {
                <br />
                <p class="text-danger">*Do you want to delete it!?</p>
                <button type="submit" id="createStudentButton" class="btn btn-danger">Delete</button>
                }
            </div>
        </div>

    }

}

<div>
    @Html.ActionLink("Back to student list", "StudentList", "Student")
</div>

