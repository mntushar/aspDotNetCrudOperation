@model crudOperation.Models.StudentModels

@{
    ViewBag.Title = ViewBag.title;
}

<style>
    button.btn.btn-primary {
        margin-top: 10px;
    }
</style>

<h2>@ViewBag.title</h2>

<div class="row">
    <div class="col-md-10 col-md-offset-4">
