@model crudOperation.Models.StudentModels

@{
    ViewBag.Title = ViewBag.title;
}

<style>
    button.btn.btn-primary {
        margin-top: 10px;
    }
</style>

<h2>@ViewBag.title</h2>

<div class="row">
    <div class="col-md-10 col-md-offset-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <table>
                <tr>
                    <td>
                        @Html.LabelFor(nameformlable => nameformlable.Name)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.TextBoxFor(nameField => nameField.Name, new { @class = "form-control" })
                        <p class="text-danger">@Html.ValidationMessageFor(model => model.Name)</p>
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(model => model.RegNo)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.TextBoxFor(model => model.RegNo, new { @class = "form-control" })
                        <p class="text-danger">@Html.ValidationMessageFor(model => model.RegNo)</p>
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(model => model.Email)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                        <p class="text-danger">@Html.ValidationMessageFor(model => model.Email)</p>
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(model => model.DepartmentId)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DropDownListFor(model => model.DepartmentId, null, "--Select--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>

            <button type="submit" id="createStudentButton" class="btn btn-primary">Submit</button>

        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to student list", "StudentList", "Student")
</div>

@section scripts
{

    @*<script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>*@
}

